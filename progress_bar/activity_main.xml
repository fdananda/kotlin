<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBarHorizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:visibility="gone"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/textViewProgressoHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="acionarProgressBarHorizontal"
        android:text="Barra de Progresso Horizontal" />

    <ProgressBar
        android:id="@+id/progressBarCircular"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:paddingTop="32dp"
        android:visibility="gone"
        android:progress="10" />

    <TextView
        android:id="@+id/textViewProgressoCircular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonProgressBarCircular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="acionarProgressBarCircular"
        android:text="Barra de Progresso Circular" />

</LinearLayout>
