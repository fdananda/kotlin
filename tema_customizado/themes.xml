<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinTemaCustomizado" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="temaCustomizado" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="android:windowTitleSize">20dp</item>
        <item name="colorPrimary">@color/colorPrimaryCustomizada</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVarianteCustomizada</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryCustomizada</item>
        <item name="colorAccent">@color/colorAccentCustomizada</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
